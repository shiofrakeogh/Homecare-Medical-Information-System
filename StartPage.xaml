<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HMIS.StartPage"
             >
    <FlexLayout Direction="Column"
            AlignItems="Center"
            JustifyContent="SpaceEvenly"
            BackgroundColor="#87CEFA">
        <Label Text="HMIS" Font="40" TextColor="White"/>
        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
            <Button Text="Log In" Clicked="Button_Clicked" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="#87CEFA" BackgroundColor="White"></Button>
        </StackLayout>
    </FlexLayout>
</ContentPage>